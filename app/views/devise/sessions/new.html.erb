



<div class="container home-sections d-flex flex-row justify-content-center align-items-center">
    <div class="images-section pt-3 d-none d-lg-block"></div>

    <div class="login-section pt-3">
        <div class="card text-center pt-5" style="width:23rem;">
            <%= image_tag('logo.png', class: "card-img-top", alt: "logo") %>
            <div class="card-body">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="mb-3 mt-4">
                   
                    <%= f.email_field :email, placeholder: "Phone number, username or email", class: "form-control" %>
                </div>
                <div class="mb-3">

                    <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
                </div>

               
                <%= f.submit "Log in", class: "btn btn-primary w-100" %>
                <% end %>


                <div class="d-flex align-items-center mt-4">
                    <div class="line"></div>
                    <h2 class="line-text">OR</h2>
                    <div class="line"></div>
                </div>

                <%= link_to '#', class: "d-block mt-4 text-decoration-none fw-bold" do %>
                    <%= image_tag('facebook.png', class: "facebook", alt: "facebook") %>
                    Login with Facebook
                <% end %>
                 
                 <% if notice.present? %>
                   <p class="notice"><%= notice %></p>
                    <% elsif alert.present? %>
                         <p class="alert"><%= alert %></p>
                              <% end %>

                <%= link_to "Forgot Password?", '#', class: "fs-6 d-block my-4 text-decoration-none" %>
            </div>
        </div>

        <div class="card text-center py-2 mt-3" style="width:23rem;">
            <div class="card-text">
                Don't have an Account?

                 <%= link_to "SignUp", new_user_registration_path, class: "fs-6 my-4 text-decoration-none " %>
            </div>
        </div>
    </div>
</div>
